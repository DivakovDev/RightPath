@model RightPath.Models.Lecture

<h1 class="fw-bold">Edit</h1>

<h5>Lecture</h5>
<hr />
<div class="row">
    <div class="col-10 border-secondary border-2 p-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group py-1">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group py-1">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control " />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group py-1" >
                <label asp-for="ProfileImage" class="control-label"></label>
                <input type="file" asp-for="ProfileImage" class="form-control" />
                <span asp-validation-for="ProfileImage" class="text-danger"></span>

            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary btn-md" /> |
                <a class="btn btn-link btn-md" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
    <div class="col-2">
        @if (Model.ProfileImage == null)
        {
            <p>Все още не сте избрали снимка!</p>
        }
        else
        {
            <img id="profilePicture" src="@Model.ProfileImage" width="100%" alt="Lecture Profile Picture"
                 style="border-radius:5px; border:1px solid #bbb9b9;" />
        }

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
