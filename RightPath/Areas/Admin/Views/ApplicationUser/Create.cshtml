@model ApplicationUser

<div class="container">
    <div class="spacer"></div>

    <h1>Добави потребител</h1>

    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label for="userFirstName" class="form-label mt-4">Име</label>
            <input asp-for="FirstName" type="text" class="form-control" id="userFirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="userEmail" class="form-label mt-4">Имейл</label>
            <input asp-for="Email" type="email" class="form-control" id="userEmail">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="userEGN" class="form-label mt-4">ЕГН</label>
            <input asp-for="EGN" type="text" class="form-control" id="userEGN">
            <span asp-validation-for="EGN" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="userPhoneNumber" class="form-label mt-4">Телефонен Номер</label>
            <input asp-for="PhoneNumber" type="text" class="form-control" id="userPhoneNumber">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="userPassword" class="form-label mt-4">Парола</label>
            <input asp-for="PasswordHash" type="password" class="form-control" id="userPassword">
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="confirmPassword" class="form-label mt-4">Повтори парола</label>
            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword">
        </div>
        
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Добави</button>
            <a asp-controller="ApplicationUser" asp-action="Index" class="btn btn-secondary">Обратно към потребителите</a>
        </div>
    </form>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}