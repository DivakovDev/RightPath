@model List<ApplicationUser>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Потребители</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="ApplicationUser" asp-action="Create" class="btn btn-warning">
                    <i class="bi bi-plus-circle"></i> Добави нов Потребител
                </a>
            </div>
        </div>
        <table id="usersTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Име</th>
                    <th>Имейл</th>
                    <th>Телефонен Номер</th>
                    <th>ЕГН</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.FirstName
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.PhoneNumber
                        </td>
                        <td>
                            @item.EGN
                        </td>
                        <td>
                            <div class="btn-group badge" role="group">
                                @* Да направя нови изгледи за редактиране и за изтриване и да добавя функционалността във контролера*@
                                <a asp-controller="ApplicationUser" asp-action="Edit" asp-route-id="@item.Id" class="shadow btn btn-light mx-2 px-4">
                                    <i class="bi bi-pencil-square"></i> Редактирай
                                </a>
                                <a class="btn btn-danger mx-2 px-4" asp-controller="User" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="bi bi-trash-fill"></i> Изтрий
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
