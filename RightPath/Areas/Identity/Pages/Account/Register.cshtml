@page
@model RegisterModel


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-dark ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">      
                    <h2 class="py-2 text-white">Регистрирай се!</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12">
                <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">Създай нов акаунт</h3>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3 col-md-12">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="име@gmail.com" />
                        <label asp-for="Input.Email" class="ms-2 text-muted">Имейл</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Парола" />
                        <label asp-for="Input.Password" class="ms-2 text-muted">Парола</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Парола" />
                        <label asp-for="Input.ConfirmPassword" class="ms-2 text-muted">Потвърди Паролата</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group py-1 mb-3 col-md-6">
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                <option disabled selected>--Избери Роля--</option>
                            </select>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.UserName" class="form-control" aria-required="true" placeholder="Иван Георгиев" />
                        <label asp-for="Input.UserName" class="ms-2 text-muted">Потребителско Име</label>
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="+359 89 777 6799" />
                        <label asp-for="Input.PhoneNumber" class="ms-2 text-muted">Телефонен Номер</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.EGN" class="form-control" aria-required="true" placeholder="ЕГН" />
                        <label asp-for="Input.EGN" class="ms-2 text-muted">ЕГН на Потребителя</label>
                        <span asp-validation-for="Input.EGN" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-md rounded btn-dark">Регистрирай</button>
                    </div>
                </form>
            </div>
                <div class="col-md-12 p-3 text-center">
                    <section>
                        <p class="divider-text d-flex pt-3">or</p>

                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div>
                                    <p>
                                    Няма конфигурирани външни услуги за удостоверяване. Виж тази статия <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                            about setting up this ASP.NET application to support logging in via external services
                                        </a>.
                                    </p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                    <div>
                                        <p>
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                            }
                                        </p>
                                    </div>
                                </form>
                            }
                        }
                    </section>
                </div>
        </div>
    </div>
</div>