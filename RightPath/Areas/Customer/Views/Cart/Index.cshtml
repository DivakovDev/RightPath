<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-dark text-uppercase">Лист от Любими</h3>
                </div>
            </div>
        </div>
        <div class="card-body my-4">
            <div class="row">
                <div class="row mb-3 pb-3">
                    <div class="col-md-2 offset-md-1">
                        <a href="/" class="btn btn-outline-primary text-uppercase mb-5 btn-sm"><small>Продължи Търсенето</small></a>
                    </div>
                </div>
                @foreach (var webminar in (IEnumerable<Webminar>)ViewBag.Webminars)
                {
                    <div class="col-lg-3 col-sm-6">
                        <div class="row p-2">
                            <div class="col-12 p-1">
                                <div class="card border-0 p-3 shadow border-top border-5 rounded custom-card" style="min-height:250px;">
                                    <img src="@webminar.Logo" class="card-img-top rounded" />
                                    <div class="custom-card-body">
                                        <p class="card-title pt-2 h5 text-dark opacity-75 text-uppercase text-center" style="min-height:50px;">@webminar.Title</p>
                                        <p class="card-title text-warning text-center">by <b>@webminar.Lecture.Name</b></p>
                                        <div class="custom-description">
                                            <p class="card-title text-dark text-opacity-75 text-center">@webminar.Description</p>
                                        </div>
                                        <div class="details-btn">
                                            <a asp-action="CourseDetails" asp-route-courseId="@webminar.Id" class="btn btn-dark bg-gradient border-0 rounded form-control">Детайли</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @foreach (var course in (IEnumerable<Course>)ViewBag.Courses)
                {
                    <div class="col-lg-3 col-sm-6">
                        <div class="row p-2">
                            <div class="col-12 p-1">
                                <div class="card border-0 p-3 shadow border-top border-5 rounded custom-card" style="min-height:250px;">
                                    <img src="@course.Logo" class="card-img-top rounded" />
                                    <div class="custom-card-body">
                                        <p class="card-title pt-2 h5 text-dark opacity-75 text-uppercase text-center" style="min-height:50px;">@course.Title</p>
                                        <p class="card-title text-warning text-center">by <b>@course.Lecture.Name</b></p>
                                        <div class="custom-description">
                                            <p class="card-title text-dark text-opacity-75 text-center">@course.Description</p>
                                        </div>
                                        <div class="details-btn">
                                            <a asp-action="CourseDetails" asp-route-courseId="@course.Id" class="btn btn-dark bg-gradient border-0 rounded form-control">Детайли</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
</form>