            </div>
            <div class="form-group py-1">
                <label asp-for="CourseDescription" class="control-label"></label>
                <input asp-for="CourseDescription" class="form-control" />
                <span asp-validation-for="CourseDescription" class="text-danger"></span>
            </div>
            <div class="form-group py-1">
                <label asp-for="CourseDuration" class="control-label"></label>
                <input asp-for="CourseDuration" class="form-control" />
                <span asp-validation-for="CourseDuration" class="text-danger"></span>
            </div>
            <div class="form-group py-1">
                <label asp-for="CourseLogo" class="control-label"></label>
                <input asp-for="CourseLogo" class="form-control" />
                <span asp-validation-for="CourseLogo" class="text-danger"></span>
