@using RightPath.Models.NewModelView
@model IEnumerable<RightPath.Models.Lecture>

<div class="row pt-4 pb-3">
    <div class="col-6">
        <h1 class="text-primary">Lectures List</h1>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-action="Create">Add New</a>
    </div>
</div>

<table class="table styled-table">
    <thead>
        <tr class="table-header">
            <th>
                @Html.DisplayNameFor(model => model.ProfileImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LectureName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LectureDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-row">
                <td>
                    <img class="rounded-circle" src="~/Images/@item.ProfileImage" alt="Profile Image" />
                </td>
                <td>
                    <span class="lecture-name">@Html.DisplayFor(modelItem => item.LectureName)</span>
                </td>
                <td>
                    <span class="last-name">@Html.DisplayFor(modelItem => item.LastName)</span>
                </td>
                <td>
                    <span class="lecture-description">@Html.DisplayFor(modelItem => item.LectureDescription)</span>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
