@model RightPath.Models.Lecture

@{
    ViewData["Title"] = "Edit Lecture";
}

<h1 class="fw-bold">Edit</h1>

<h5>Lecture</h5>
<hr />
<div class="row justify-content-center">
    <div class="col-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group py-1">
                <label asp-for="LectureName" class="control-label"></label>
                <input asp-for="LectureName" class="form-control" />
                <span asp-validation-for="LectureName" class="text-danger"></span>
            </div>
            <div class="form-group py-1">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group py-1">
                <label asp-for="LectureDescription" class="control-label"></label>
                <input asp-for="LectureDescription" class="form-control " />
                <span asp-validation-for="LectureDescription" class="text-danger"></span>
            </div>
            <div class="form-group py-1">
                <label asp-for="ProfileImage" class="control-label"></label>
                <input asp-for="ProfileImage" class="form-control" />
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary btn-md" /> |
                <a class="btn btn-link btn-md" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
