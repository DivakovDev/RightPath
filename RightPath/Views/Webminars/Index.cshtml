@using RightPath.Models.NewModelView
@model IEnumerable<RightPath.Models.Webminar>

<style>
    .table td, .table th {
        padding: 20px 10px; /* Reduced padding */
        font-size: 0.9em; /* Smaller font size */
        word-wrap: break-word; /* Ensures text wraps in cell */
    }

    .table td{
        padding: 20px 20px;
    }
</style>

<div class="row pt-4 pb-3">
    <div class="col-6">
        <h1 class="text-primary">Webminar List</h1>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </div>
</div>

    <table class="table">
        <thead>
            <tr class="table-row">
                <th>
                    @Html.DisplayNameFor(model => model.WebminarLogo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WebminarDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WebminarLocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lecture1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lecture2)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img class="rounded-circle" src="~/Images/@item.WebminarLogo" alt="Webminar Logo" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WebminarDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WebminarLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lecture1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lecture2)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
