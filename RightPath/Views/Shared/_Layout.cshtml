<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]RightPath</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RightPath.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RightPath</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="align-items:center;">
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="padding-right:0;" asp-area="Customer" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>
                        @if (User.IsInRole(StaticDetail.Role_Admin))
                        {
                            <li class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" style="padding-left:0;" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Управлявай Съдържанието
                                </button>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="nav-link dropdown-item text-dark" asp-area="Admin" asp-controller="Courses" asp-action="Index">Курсове</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link dropdown-item text-dark" asp-area="Admin" asp-controller="Webminars" asp-action="Index">Уебминари</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link dropdown-item text-dark" asp-area="Admin" asp-controller="Lectures" asp-action="Index">Лектори</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link dropdown-item text-dark" asp-area="Admin" asp-controller="Cities" asp-action="Index">Градове</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Register">Създай Потребител</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link dropdown-item text-dark" asp-area="Admin" asp-controller="User" asp-action="Index">Менажирай Потребителите</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Cart" asp-action="Index">  
                                Любими
                            </a>
                        </li>
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2024 - RightPath - By DivakovDev
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
